EXERCISE 10:

BEGIN
int prev = 1, curr = 1, tempVar;

output(prev);
output (curr);

for(int i=1;i<100;i++) {
	tempVar = curr + prev;
	prev = curr;
	curr = tempVar;
	
	output(tempVar);
}

END

