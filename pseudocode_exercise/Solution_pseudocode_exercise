Exercise 3:

BEGIN
int num, sum=0;
input num;

for(int i=1;i<=num;i++) {
	if(num % i == 0) {
		sum = sum + i;
	}
}

if(sum == num){
	
	output (Perfect Number);
}
else {
	output (Not a Perfect number);  
}

END


--------------------------------------------

EXERCISE 4:

BEGIN
int num1, num2, num3;
input num1 num2 num3 ;

if(num1 <= num2 && num1 <=num3) {
	output(num1 is the smallest number);
}

else if(num2 <= num1 && num2 <= num3) {
	output(num2 is the smallest number);
}

else {
	output(num3 is the smallest number);
}

END

