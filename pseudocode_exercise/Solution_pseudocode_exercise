EXERCISE 7:

BEGIN 
int num;

switch(num) {

	case 1:
		output(SUNDAY);
		break;
	case 2:
		output(MONDAY);
		break;
	case 3:
		output(TUESDAY);
		break;
	case 4:
		output(WEDNESDAY);
		break;
	case 5:
		output(THURSDAY);
		break;
	case 6:
		output(FRIDAY);
		break;
	case 7:
		output(SAURDAY);
		break;
	
	default:
		output (INVALID INPUT NUMBER).
}


END

--------------------------------------------


EXERCISE 8:

BEGIN
int num1, num2
input num1, num2

char operation;
input operation;

switch (operation) {

	case '+':
		output (num1 + num2);
		break;
	
	case '-':
		output (num1 - num2);
		break;
			
	case '*' :
		output (num1 * num2);
		break;
	
	case '/':
		output (num1 / num2);
		break;
	
	default:
		output (INVALID OPERATION);

}


END


