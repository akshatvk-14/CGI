EXERCISE 6:

BEGIN
input num, oneCount, tempVar;

while(num!=0){
	tempVar = num % 2;
	num = num / 2;
	
	if(tempVar == 1){
		oneCount++;
		if(oneCount > 1){
			output ( Not a perfect square);
			break;
		}
	}
}	
if(oneCount <=1){
	output (It's a perfect number.)
}	

END

